@model FoodProject.Models.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Ekleme Sayfası</h1>

@using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post))
{

    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x=> x.CategoryName,new {@class="form-control",placeholder="Kategori Adı" })
    @Html.ValidationMessageFor(x=> x.CategoryName,"",new {@style="color:red" })
    <br />
    @Html.Label("Kategori Açıklama")
    @Html.TextAreaFor(x=> x.CategoryDescription,new {@class="form-control",placeholder="Kategori Açıklama" })

    <br /> 
    <button class="btn btn-success"> Kaydet</button>

}
